<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="0dp">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar" />

    <TableLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="9">

        <TableRow
            android:id="@+id/tableRowClaimType"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lblClaimType"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="5dip"
                android:text="@string/claimType"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtClaimType"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dip"
                android:textColor="#000000"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/rowOccupation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TextView01"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="5dip"
                android:text="@string/shareType"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextView_tenureRelation"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dip"
                android:textColor="#000000"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/rowDisputeType"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lblDisputeType"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="5dip"
                android:text="@string/DisputeType"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDisputeType"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dip"
                android:textColor="#000000"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/rowDisputingPersons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lblDisputingPersons"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="5dip"
                android:text="@string/DisputingParties"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDisputingPersons"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dip"
                android:textColor="#000000"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/rowProperty"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TextView03"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="5dip"
                android:text="@string/data_summary_label2"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextView_propertyStatus"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dip"
                android:textColor="#009112"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/rowNaturalPersons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TextView05"
                android:layout_weight="1"
                android:gravity="start"
                android:padding="5dip"
                android:text="@string/data_summary_label3"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextView_countNaturalPerson"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dip"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/rowPoi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TextView14"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="5dip"
                android:text="@string/data_summary_label5_POI"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextView_countPOI"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dip"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/rowMedia"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TextView11"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="5dip"
                android:text="@string/data_summary_label6"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextView_countMultimedia"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dip"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/rowCustom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TextView13"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="5dip"
                android:visibility="gone"
                android:text="@string/data_summary_label7"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextView_custom"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone"
                android:padding="10dip"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>


    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/edit_attributes"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/color_primary"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/edit_attributes"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnClose"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/color_primary"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/Close"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>